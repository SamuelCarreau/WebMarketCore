@model List<WebMarket.Models.Security.User>

@{
    ViewBag.Title = "View";
}

<h2>User</h2>

<p>
    @Html.ActionLink("Create New", "UserCreate")
</p>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>

                <td>@user.Email</td>

                <td>
                    @Html.ActionLink("Edit", "Edit", "Security", new { id = user.Id }) |
                    @Html.ActionLink("Details", "Details", "Security", new { id = user.Id }) |
                    @Html.ActionLink("Delete", "Delete", "Security", new { id = user.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
